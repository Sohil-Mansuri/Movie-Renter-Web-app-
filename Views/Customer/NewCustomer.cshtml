@model MovieRenderApp.Models.Customer
@{
    ViewBag.Title = "NewCustomer";
}

<h2>New Customer Register Here </h2>
<br />
<br />
@if(ViewBag.key==1){

    <script>alert("Data Successfully Added");</script>
    }

@using (Html.BeginForm())
{
    <div class="form-group">

        <div class="row">

            <div class="col-md-2">@Html.LabelFor(m=>m.Name)</div>
            <div class="col-md-5">@Html.EditorFor(m=>m.Name, new { htmlAttributes = new { @class = "form-control" } })</div>
        </div>
        <div class="row">
            <div class="col-md-3 col-md-offset-2 ">
                @Html.ValidationMessageFor(m => m.Name, "", new { @class="text-danger"})
            </div>
        </div>
        <br />
        <div class="row">

            <div class="col-md-2">@Html.LabelFor(m => m.Birthdate)</div>
            <div class="col-md-4">@Html.EditorFor(m => m.Birthdate, new { htmlAttributes = new { @class = "form-control" } } )</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-md-offset-2">
                @Html.ValidationMessageFor(m => m.Birthdate, "", new {@class="text-danger" })
            </div>
        </div>

            <br />

           
            <div class="row">

                <div class="col-md-2">@Html.LabelFor(m => m.MembershipTypeId)</div>
                <div class="col-md-3">@Html.DropDownListFor(model => model.MembershipTypeId, new SelectList(ViewBag.List2,"Id","List"), "Select Membership Type", htmlAttributes: new { @class = "form-control" })</div>
            </div>
            <div class="row">
                <div class="col-md-3 col-md-offset-2">
                    @Html.ValidationMessageFor(m => m.MembershipTypeId, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />
            
            <div class="row">

                <div class="col-md-2">@Html.LabelFor(m => m.country)</div>
                <div class="col-md-3">@Html.DropDownListFor(model => model.country, new SelectList(ViewBag.List1), "India", htmlAttributes: new { @class = "form-control" })</div>
            </div>
            <div class="row">
                <div class="col-md-3 col-md-offset-2">
                    @Html.ValidationMessageFor(m => m.country, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-md-4 col-md-offset-2">
                    @Html.CheckBoxFor(m => m.isSubscribedTonewsletter) Is Subscribed to News letter?
                </div>

            </div>
            <br />

            @Html.HiddenFor(m=>m.Id)

            <div class="row">
                <div class="col-md-1 col-md-offset-2">
                    <input type="submit" value="Submit" class="btn btn-info " />
                </div>
                <div class="col-md-3"><button type="reset" onclick="Cbtn()" class="btn btn-primary">Clear</button></div>

            </div>
            @Html.AntiForgeryToken();
        
}
